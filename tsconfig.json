{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom", "es5", "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "_build/typescript",
    "paths": {
      "app/*": ["*"]
    },
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ]
}
